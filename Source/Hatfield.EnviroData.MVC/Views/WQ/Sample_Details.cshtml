@{
    ViewBag.Title = "Water Quality Sample '9211-abm' Details";
}
@section PageTitleH1
{
    <h1><i class="glyphicon glyphicon-bookmark"></i> @ViewBag.Title</h1>
}
@section Breadcumb
{
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Home</a></li>
    <li><a href="@Url.Action("Index","ManageData")">Manage Data</a></li>
    <li><a href="@Url.Action("Samples_List","ManageData")">List Samples</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
}
@helper RandomDate(Random randNum)
{    
    DateTime minDt = new DateTime(2012, 1, 1, 10, 0, 0);
    DateTime maxDt = DateTime.Now;
    int minutesDiff = Convert.ToInt32(maxDt.Subtract(minDt).TotalMinutes + 1);
    DateTime randDate = minDt.AddMinutes(randNum.Next(1, minutesDiff));
    <span>@randDate.ToString("MMM d, yyyy")</span>
}
@helper StationRow(Random randNum, string siteId, string desc, string project)
{           
    <tr>
        <td><input type="checkbox" /></td>
        <td>@siteId</td>
        <td>@desc</td>
        <td>@project</td>
        <td>@RandomDate(randNum)</td>
        <td>
            <!-- Single button -->
            <div class="btn-group">
                <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Action <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="#">View Site Details</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                </ul>
            </div>
        </td>
    </tr>
}
<div class="row">
    <div class="col-md-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Manage Water Quality Samples</h3>
            </div>
            <div class="panel-body">
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="@Url.Action("Samples_List")">List All Water Quality Samples</a></li>                    
                </ul>
            </div>            
        </div>
    </div>
    <div class="col-md-9">
        @{
            Random randNum = new Random();
        }
        <table class="table table-striped table-bordered">
            <tr>
                <td>Sample ID:</td>
