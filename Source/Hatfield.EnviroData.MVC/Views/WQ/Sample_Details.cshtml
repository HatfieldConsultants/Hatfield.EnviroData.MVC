            </tr>
            <tr>
                <td>Project:</td>
                <td><a href="@Url.Action("Project_Details")">AEM7250</a></td>
            </tr>
            <tr>
                <td>Sample Type:</td>
                <td>Field Blank | Trip Blank | Duplicate | Regular</td>
            </tr>            
            <tr>
                <td>Date Collected:</td>
                <td>@RandomDate(randNum)</td>
            </tr>
            <tr>
                <td>Lab Analysis:</td>
                <td>by <a href="@Url.Action("Lab_Details")">Maxxam</a> on @RandomDate(randNum)</td>
            </tr>
            <tr>
                <td colspan="2"><a href="#" class="btn btn-sm btn-default"><i class="glyphicon glyphicon-pencil"></i> Edit</a></td>
