@{
    ViewBag.Title = "All Monitoring Sites";
}
@section PageTitleH1
{
    <h1><i class="glyphicon glyphicon-bookmark"></i> @ViewBag.Title</h1>
}
@section Breadcumb
{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li><a href="@Url.Action("Index","ManageData")">Manage Data</a></li>
        <li class="active">List Sampling Sites</li>        
    </ol>
}
@helper RandomDate(Random randNum)
{    
    DateTime minDt = new DateTime(2012, 1, 1, 10, 0, 0);
    DateTime maxDt = DateTime.Now;
    int minutesDiff = Convert.ToInt32(maxDt.Subtract(minDt).TotalMinutes + 1);
    DateTime randDate = minDt.AddMinutes(randNum.Next(1, minutesDiff));
    <span>@randDate.ToString("MMM d, yyyy")</span>
}
        
<div class="row">
    <div class="col-md-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Manage Sampling Sites</h3>
            </div>
            <div class="panel-body">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="@Url.Action("MonitoringSites_List")"><i class="glyphicon glyphicon-list"></i> List All Monitoring Sites</a></li>
                    <li><a href="@Url.Action("MonitoringSites_Map")"><i class="glyphicon glyphicon-map-marker"></i> Map Monitoring Sites</a></li>
                    <li><a href="@Url.Action("MonitoringSites_WithMissingInfo")"><i class="glyphicon glyphicon-exclamation-sign red"></i> Locations with missing information</a></li>
                </ul>
            </div>            
        </div>
    </div>
    <div class="col-md-9">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>All|None</th>
                    <th>Site Id</th>
                    <th>Description</th>
                    <th>Project(s)</th>
                    <th>Last Data Available Date</th>
                    <th>Component Datasets</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: stations">
                <tr>
                    <td><input type="checkbox" /></td>
                    <td><a data-bind="text: StationId" href="@Url.Action("MonitoringSite_Details")"></a></td>
                    <td data-bind="text: Description"></td>
                    <td>Need Project</td>
                    <td>Need Date</td>
                    <td>Water Quality</td>
                    <td>
                        <!-- Single button -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("SamplingSite_Details")">View Site Details</a></li>
                                <li><a href="#">Another action</a></li>
                                <li><a href="#">Something else here</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Separated link</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        Select All|None. With selected: <a href="#" class="btn btn-primary btn-sm">Merge selected into a single site</a>. <a href="#" class="btn btn-primary btn-sm">Mark as virtual site(s) that only contains QA/QC data</a>
    </div>
</div> <!-- // row -->



<p>&nbsp;</p>