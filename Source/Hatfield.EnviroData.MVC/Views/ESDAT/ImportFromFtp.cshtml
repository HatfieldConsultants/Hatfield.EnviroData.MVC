@{
    ViewBag.Title = "Import ESDAT Data";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Import ESDAT Data</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Import data from FTP File System
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body" id="FtpFileImportDiv">
                <div class="form-group">
                    <label> Header File URL: (Optional)</label>
                    <input class="form-control" type="text" data-bind="value: HeaderFileURL" placeholder="Header File URL" />
                </div>

                <div class="form-group">
                    <label> Sample File URL</label>
                    <input class="form-control" type="text" data-bind="value: SampleFileURL" placeholder="Sample File URL" />
                </div>

                <div class="form-group">
                    <label> Chemistry File URL</label>
                    <input class="form-control" type="text" data-bind="value: ChemistryFileURL" placeholder="Chemistry File URL" />
                </div>

                <div class="form-group">
                    <label> UserName</label>
                    <input class="form-control" type="text" data-bind="value: UserName" placeholder="UserName" />
                </div>

                <div class="form-group">
                    <label> Password</label>
                    <input class="form-control" type="password" data-bind="value: Password" placeholder="password" />
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" data-bind="click: function(){$root.submitImportRequest(); return false;}">Import</button> |
                    <a class="btn btn-danger" href="@Url.Action("Index")">Cancel</a>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

        <div class="row">
            <div class="well" id="ftpImportResultDiv" data-bind="foreach: ImportResults">
                <span data-bind="html: Message"></span><br />
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/Knockout/FTPFileImport.js"></script>

<script>
    $(document).ready(function () {        
        var ftpFileImportViewModel = new FTPFileImportModel();                
        ko.applyBindings(ftpFileImportViewModel, document.getElementById('FtpFileImportDiv'));        
    }); //end of document ready function

</script>