@{
    ViewBag.Title = "Import ESDAT Data";
}

<div id="page-wrapper">
    <div id="LocalFileImportDiv" class="contentDiv">
        <section class="content-wrapper main-content clear-fix">
            <h2>Local File System</h2>

            <ol class="round">
                <li class="one">
                    <div>
                        <h5>Specify File Information</h5><br />
                        <span><b>Header File: (Optional)</b> <input type="file" /></span><br />
                        <span><b>Sample File:</b> <input type="file" /></span><br />
                        <span><b>Chemistry File:</b> <input type="file" /></span>
                    </div>
                </li>
                <li class="two">
                    <div>
                        <h5>Import ESDAT Files</h5>
                        <br />
                        <button data-bind="click: function(){$root.submitImportRequest(); return false;}">Import</button>
                    </div>
                </li>
                <li class="three">
                    <h5>Import Results</h5><br />
                    <div id="localImportResultDiv" data-bind="foreach: ImportResults" style="overflow-y: scroll; height: 300px">
                        <span data-bind="html: Message"></span><br />
                    </div>
                </li>
            </ol>

        </section>
    </div>
</div>

<script src="~/Scripts/Knockout/LocalFileImport.js"></script>


<script>
    $(document).ready(function () {
        var localFileImportViewModel = new LocalFileImportModel();
        ko.applyBindings(localFileImportViewModel, document.getElementById('LocalFileImportDiv'));
    }); //end of document ready function

</script>